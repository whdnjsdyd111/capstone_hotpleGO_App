<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/customview4"
            android:elevation="5dp"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_img"
                android:layout_width="240dp"
                android:layout_gravity="center"
                android:layout_height="160dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/no_image" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/menu_name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/elandfont"
                    android:text="메뉴명 : "
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/menu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/menu_name_left"
                    android:layout_toRightOf="@id/menu_name_left"
                    android:background="@null"
                    android:fontFamily="@font/elandfont"
                    android:hint="메뉴명"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="10"
                    android:textSize="24sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/menu_price_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/elandfont"
                    android:lines="1"
                    android:text="가격: "
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/menu_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/menu_price_left"
                    android:layout_toRightOf="@id/menu_price_left"
                    android:background="@null"
                    android:hint="가격(단위: 원)"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="7"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/menu_cnt_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/elandfont"
                    android:lines="1"
                    android:text="소개글: "
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/menu_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/menu_cnt_left"
                    android:layout_toRightOf="@id/menu_cnt_left"
                    android:background="@null"
                    android:fontFamily="@font/elandfont"
                    android:hint="메뉴 소개"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="100"
                    android:textSize="24sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/menu_hashtag_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/elandfont"
                    android:lines="1"
                    android:text="해시태그: "
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/menu_hashtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/menu_hashtag_left"
                    android:layout_toRightOf="@id/menu_hashtag_left"
                    android:background="@null"
                    android:fontFamily="@font/elandfont"
                    android:gravity="bottom"
                    android:hint="메뉴 해시태그"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="100"
                    android:textSize="24sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/menu_cateory_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/elandfont"
                    android:lines="1"
                    android:text="카테고리: "
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/menu_cateory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/menu_cateory_left"
                    android:layout_toRightOf="@id/menu_cateory_left"
                    android:background="@null"
                    android:fontFamily="@font/elandfont"
                    android:hint="메뉴 카테고리"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="100"
                    android:textSize="24sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/menu_modify_canel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#00ff0000"
                android:fontFamily="@font/elandfont"
                android:text="취소하기"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/menu_modify_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="#00ff0000"
                android:fontFamily="@font/elandfont"
                android:text="저장하기"
                android:textColor="#FF4A6F"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>