<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2560">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:paddingTop="10dp">

        <TextView
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1820"
        android:background="@drawable/round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="0">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputName"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1350"
                android:background="@drawable/signup_edit"
                android:hint="닉네임"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputBirth"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1350"
                android:background="@drawable/signup_edit"
                android:hint="생년월일 ( ex.931104 )"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1400">

            <RadioGroup
                android:id="@+id/gendor_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1.02"
                    android:checked="false"
                    android:hint="남"

                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/fmale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:layout_marginLeft="80dp"
                    android:checked="false"
                    android:hint="여"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/PhoneNumber"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1350"
                android:background="@drawable/signup_edit"
                android:hint="핸드폰 번호 ( - 없이 입력해주세요. )"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="300"
            android:weightSum="1440">

            <Button
                android:id="@+id/Joinbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1300"
                android:background="@drawable/btn_signup"
                android:text="회원가입"
                android:textColor="#535353" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>