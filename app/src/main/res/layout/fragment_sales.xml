<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:scrollbars="none">
            <view
                android:id="@+id/lineChart"
                class="im.dacer.androidcharts.LineView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </view>
        </HorizontalScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:padding="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최고 매출 :"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/elandfont"
                android:textSize="22sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/bestSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/best_sales"
                android:fontFamily="@font/elandfont"
                android:textSize="22sp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="최저 매출 : "
                android:fontFamily="@font/elandfont"
                android:textSize="22sp"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/wastSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/worst_sales"
                android:fontFamily="@font/elandfontbold"
                android:textSize="22sp"
                android:textColor="#1C1C1C"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평균 매출 : "
                android:fontFamily="@font/elandfont"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/avgSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/avg_sales"
                android:fontFamily="@font/elandfont"
                android:textSize="22sp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total"
                android:textSize="22sp"
                android:textColor="#FD5765"
                android:fontFamily="@font/elandfontbold"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/allSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/totla_sales"
                android:layout_gravity="center"
                android:textColor="#FD5765"
                android:fontFamily="@font/elandfontbold"
                android:textSize="30sp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>