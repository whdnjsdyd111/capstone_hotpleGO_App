<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.board.DetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/board_add"
        android:padding="15dp"
        android:background="@drawable/gradientview2"
        android:textSize="28sp"
        android:textColor="#fff"
        android:fontFamily="@font/elandfontbold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/board_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:hint="제목을 입력해주세요"
                android:textSize="24sp"
                android:textColor="#393939"
                android:inputType="text" />

            <EditText
                android:id="@+id/board_contents"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/customborder"
                android:gravity="top"
                android:layout_marginBottom="10dp"
                android:hint="@string/board_add_hint"
                android:inputType="none"
                android:textSize="22sp"
                android:textColor="#393939"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="right">


                <ImageButton
                    android:id="@+id/cameraButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/outline_photo_camera_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/elandfontbold"
                    android:background="@drawable/gradientbutton4"
                    android:text="확인"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


