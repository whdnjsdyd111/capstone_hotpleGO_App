<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="내 정보"
                android:textColor="#000"
                android:fontFamily="@font/elandfont"
                android:textSize="24sp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:textColor="#393939"
                            android:text="이메일" />
                        <TextView
                            android:id="@+id/manager_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:text=""
                            android:textColor="#000"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:text="생성일자"
                            android:textColor="#393939"/>
                        <TextView
                            android:id="@+id/manager_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:text=""
                            android:textColor="#000"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="실명"
                            android:textSize="22sp"
                            android:textColor="#393939"/>
                        <TextView
                            android:id="@+id/manager_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:text=""
                            android:textColor="#000"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="계좌번호"
                            android:textSize="22sp"
                            android:textColor="#393939" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/manager_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/stroke"
                                    android:paddingLeft="6dp"
                                    android:text=""
                                    android:textSize="22sp" />

                                <Spinner
                                    android:id="@+id/manager_bank"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:spinnerMode="dropdown"
                                    android:background="@drawable/stroke"/>

                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/manager_bank_btn"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="3dp"
                                android:layout_gravity="top"
                                android:minHeight="1dp"
                                android:textSize="20sp"
                                android:textColor="#FF5F84"
                                android:background="@color/white"
                                android:stateListAnimator="@null"
                                android:fontFamily="@font/elandfontbold"
                                android:text="수정하기"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="닉네임"
                            android:textColor="#393939"
                            android:textSize="22sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/manager_nick"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/stroke"
                                android:textSize="22sp"
                                android:paddingLeft="6dp"
                                android:text="" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/manager_nick_btn"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="3dp"
                                android:layout_gravity="top"
                                android:text="수정하기"
                                android:fontFamily="@font/elandfontbold"
                                android:minHeight="1dp"
                                android:textColor="#FF5F84"
                                android:textSize="20sp"
                                android:background="@color/white"
                                android:stateListAnimator="@null"/>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="핫플 정보"
                    android:textColor="#000"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/elandfont"
                    android:textSize="24sp"/>
                <ImageView
                    android:id="@+id/hotple_img"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:layout_weight="5">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:layout_marginLeft="10dp"
                            android:text="업체명"
                            android:textColor="#393939" />
                        <EditText
                            android:id="@+id/hotple_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/stroke"
                            android:textSize="22dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="20dp"
                            android:paddingStart="6dp"
                            android:paddingLeft="6dp"
                            android:text="업체명" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="6"
                            android:text="사업자등록번호"
                            android:layout_marginBottom="5dp"
                            android:textSize="22sp"
                            android:textColor="#393939" />
                        <EditText
                            android:id="@+id/hotple_busn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/stroke"
                            android:textSize="22dp"
                            android:paddingStart="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:text="503" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/juso_popup"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:background="@drawable/gradientbutton3"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:fontFamily="@font/elandfontbold"
                            android:text="도로명 주소"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:layout_weight="3"
                            android:text="도로명주소"
                            android:textColor="#393939" />
                        <TextView
                            android:id="@+id/hotple_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="22dp"
                            android:gravity="center"
                            android:text="도로명주소"
                            android:textColor="#000" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:layout_weight="2"
                            android:text="상세 주소"
                            android:textColor="#393939" />
                        <TextView
                            android:id="@+id/hotple_addr_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textSize="22dp"
                            android:paddingStart="6dp"
                            android:paddingLeft="6dp"
                            android:text="상세 주소"
                            android:textColor="#000" />
                        <EditText
                            android:id="@+id/hotple_addr_detail_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:paddingStart="6dp"
                            android:paddingLeft="6dp"
                            android:visibility="gone"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:layout_weight="2"
                            android:text="우편번호"
                            android:textColor="#393939" />
                        <TextView
                            android:id="@+id/hotple_zip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textSize="22dp"
                            android:paddingStart="6dp"
                            android:paddingLeft="6dp"
                            android:text="우편번호"
                            android:textColor="#000"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:layout_weight="2"
                            android:text="소개 글"
                            android:textColor="#393939" />
                        <EditText
                            android:id="@+id/hotple_cont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/stroke"
                            android:textSize="22dp"
                            android:paddingStart="6dp"
                            android:paddingLeft="6dp"
                            android:text="소개 글"
                            android:textColor="#000"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="22sp"
                            android:layout_weight="3"
                            android:text="업체 연락처"
                            android:textColor="#393939" />
                        <EditText
                            android:id="@+id/manager_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/stroke"
                            android:textSize="22dp"
                            android:paddingStart="6dp"
                            android:paddingLeft="6dp"
                            android:inputType="number"
                            android:maxLength="11"
                            android:text="01000000000" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            android:layout_weight="2"
                            android:text="카테고리"
                            android:textColor="#393939" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/hotple_cate_big"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/stroke"/>
                            <Spinner
                                android:id="@+id/hotple_cate_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/stroke"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hotple_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:fontFamily="@font/elandfont"
                            android:minHeight="1dp"
                            android:stateListAnimator="@null"
                            android:text="업체 수정"
                            android:textColor="#FF5F84"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>