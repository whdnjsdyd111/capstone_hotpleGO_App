<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2560">

    <!-- 세로 5cm 끝 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1230"
        android:background="@drawable/round"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="6.5">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1.5">

            <ImageView
                android:src="@drawable/search_img2"
                android:layout_width="55dp"
                android:layout_height="55dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center">

            <TextView
                android:text="비밀번호 찾기"
                android:textSize="32dp"
                android:fontFamily="@font/elandfont"
                android:textColor="#393939"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <EditText
                android:id="@+id/SearchId"
                android:hint="이메일"
                android:paddingLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:textColor="#393939"
                android:background="@drawable/search_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:minWidth="200dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <EditText
                android:id="@+id/SearchNamePw"
                android:hint="이름"
                android:paddingLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:textColor="#393939"
                android:background="@drawable/search_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:minWidth="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center">

            <EditText
                android:id="@+id/SearchBirthPw"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/search_edit"
                android:hint="생년월일"
                android:inputType="number"
                android:minWidth="200dp"
                android:paddingLeft="10dp"
                android:textColor="#393939"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SearchPwbtn"
                android:layout_width="220dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbutton3"
                android:text="비밀번호 찾기"
                android:textSize="26sp"
                android:fontFamily="@font/elandfontbold"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>