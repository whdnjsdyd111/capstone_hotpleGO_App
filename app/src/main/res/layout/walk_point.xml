<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#90F4F4F4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WalkPointActivity">

    <TextView
        android:id="@+id/walkpoint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="만보기 적립"
        android:textColor="#393939"
        android:fontFamily="@font/elandfont"
        android:textSize="28dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customview"
        android:backgroundTint="@color/white"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="80dp"
            android:max="1000"
            app:progress_end_color="#F39CF2"
            app:progress_start_color="#ED9F9F"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="15dp "
            app:progress_text_color="#000000"
            app:progress_text_size="45sp"
            app:style="solid_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/elandfontbold"
                android:text="현재 포인트: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textViewwalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/elandfontbold"
                android:text="0p"
                android:textColor="#FF73B4"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:minHeight="50dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="코스 끝내기" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:minHeight="50dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="+30분" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>