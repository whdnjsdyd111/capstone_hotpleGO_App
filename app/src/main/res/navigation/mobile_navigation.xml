<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hotplego.ui.user.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_board"
        android:name="com.example.hotplego.ui.user.board.BoardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_board" />

    <fragment
        android:id="@+id/navigation_course"
        android:name="com.example.hotplego.ui.user.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.hotplego.ui.user.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_myPage"
        android:name="com.example.hotplego.ui.user.mypage.MyPageFragment"
        android:label="@string/title_MyPage"
        tools:layout="@layout/fragment_mypage" />
</navigation>