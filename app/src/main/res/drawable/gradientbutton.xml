<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#FF6094"
                android:endColor="#FFE0A2" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>
    <item
        android:left="18dp"
        android:right="18dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    <item
        android:left="18dp"
        android:right="18dp">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>